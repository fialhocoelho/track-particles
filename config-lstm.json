{
    "paths": {
        "save_dir": "results",
        "log_dir": "logs"
    },
    "data": {
        "filename": "./dataset/phi025-025_eta025-025_filtered.csv",
        "train_split": 0.70,
        "normalise": true,
        "cylindrical": false
    },
    "training": {
        "epochs": 20,
        "batch_size": 32,
        "save_model": true,
        "load_model": false,
        "use_gpu": true        
    },
    "model": {
        "name": "lstm",
        "loss": "mse",
        "optimizer": "RMSprop",
        "layers": [
            {
                "type": "lstm",
                "neurons": 200,
                "input_timesteps": 4,
                "input_features": 3,
                "return_seq": true
            },
            {
                "type": "lstm",
                "neurons": 200,
                "return_seq": false
            },
            {
                "type": "dense",
                "neurons": 400,
                "activation": "tanh"
            },
            {
                "type": "activation",
                "activation": "tanh"
            },
            {
                "type": "repeatvector",
                "neurons": 50
            }, 
            {
                "type": "lstm",
                "neurons": 200,
                "return_seq": true
            },
            {
                "type": "lstm",
                "neurons": 200,
                "return_seq": true
            }, 
            {
                "type": "timedistributed",
                "neurons": 3
            },                                                                  
            {
                "type": "activation",
                "activation": "linear"
            }
        ]
    }
}
